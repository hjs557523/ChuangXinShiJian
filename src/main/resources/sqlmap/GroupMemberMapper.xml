      <if test="group.gid != null" >
        group_id = #{group.gid,jdbcType=INTEGER},
      </if>
      <if test="student.sid != null" >
        student_id = #{student.sid,jdbcType=INTEGER},
      </if>
    </set>
    where group_member_id = #{groupMemberId,jdbcType=INTEGER}
  </update>


