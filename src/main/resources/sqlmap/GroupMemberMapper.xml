  <select id="findAllGroupMember" resultMap="BaseResultMap">
    select * from group_member g left join student s on g.student_id = s.sid left join `group` p on g.group_id = p.gid
  </select>


  <select id="findGroupMemberByGroupId" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select * from group_member g left join student s on g.student_id = s.sid left join `group` p on g.group_id = p.gid where group_id = #{groupId,jdbcType=INTEGER}
  </select>


  <select id="findGroupMemberByStudentId" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select * from group_member g left join student s on g.student_id = s.sid left join `group` p on g.group_id = p.gid where g.student_id = #{studentId,jdbcType=INTEGER}
  </select>


  <select id="findGroupMemberByGroupMemberId" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select * from group_member g left join student s on g.student_id = s.sid left join `group` p on g.group_id = p.gid where group_member_id = #{groupMemberId,jdbcType=INTEGER}
  </select>


  <delete id="deleteGroupMemberByGroupMemberId" parameterType="java.lang.Integer" >
